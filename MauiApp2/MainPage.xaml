<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!-- Imagen de dotnet bot -->
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <!-- Label corregido -->
            <Label
                x:Name="LabelArchivo"
                Text=""
                FontSize="Medium"/>

            <!-- Editor para ingresar texto -->
            <Editor
                x:Name="TxtArchivo"
                Placeholder="Ingrese el texto para el archivo"              
                />

            <!-- Botón para guardar el archivo -->
            <Button
                x:Name="BtnGuardarArchivo"
                Text="Guardar Archivo"
                Clicked="BtnGuardarArchivo_Clicked"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
